java_library {
    name: "ike",
    installable: true,

    aidl: {
        local_include_dirs: ["src/java"],
    },
    srcs: [
        "src/java/**/*.java",
        ":bouncycastle_ike_digests",
    ],

    // Bouncycastle filegroup is jar-jar'ed to avoid classpath conflicts. This is necessary to
    // preserve access to SHA1Digest and MD4Digest implementations for use by EAP.
    jarjar_rules: "jarjar-bouncycastle-ike-digests.txt",

    plugins: ["java_api_finder"],
}

filegroup {
    name: "ike-api-srcs",
    srcs: ["src/java/android/**/*.java"],
    path: "src/java/",
}
